 int findIntersection(Node *firstHead, Node *secondHead)

{

    Node* l1=firstHead;

    Node * l2=secondHead;

    int cnt1=0,cnt2=0;

    while (l1 )

    {

        cnt1++;

        l1=l1->next;

    }

    while (l2)

    {

        cnt2++;

        l2=l2->next;

    }

 

    if (cnt1>cnt2)

    {

        int n=cnt1-cnt2;

 

        while (n--)

        {

            l1=l1->next;

        }

    }else if (cnt1<cnt2)

    {

        int n=cnt2-cnt1;

 

                while (n--)

                {

                  l2 = l2->next;

                }

    }

    int ans;

    while (l1 && l2)

    {

        if (l1==l2)

         {

            ans =l1->data;

        }else{

            l1=l1->next;

            l2=l2->next;

        }

    }

    return ans;

}
